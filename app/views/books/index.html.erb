<h2>書籍一覧</h2>
<table>
    <thead>
        <tr>
            <th>書籍名</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
               <td><%= book.name %></td>
               <td><%= link_to "詳細", book_path(book)%></td>
               <td><%= link_to '編集', edit_book_path(book) %></td>
               <td><%= link_to '削除', book_path(book), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to '新規登録', new_book_path %>
